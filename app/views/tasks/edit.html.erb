<h3>タスク編集</h3>

<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.text_field :start %></td>
    </tr>
    <tr>
      <th><%= f.label :stop ,"終了日" %></th>
      <td><%= f.text_field :stop %></td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"メモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "タスク一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>