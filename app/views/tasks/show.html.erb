<h3>タスク詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @task.stop %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @task.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "タスク一覧に戻る", :tasks %></li>
  </ul>
</div>