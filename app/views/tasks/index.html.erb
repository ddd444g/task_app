<h3>タスク一覧</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>
 
 <table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>更新日</th>
       <th>メモ</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
 
   <tbody>
     <% @tasks.each do |task| %>
       <tr>
         <td><%= task.id %></td>
         <td><%= task.title %></td>
         <td><%= task.start %></td>
         <td><%= task.stop %></td>
         <td><%= task.updated_at.to_s(:datetime_jp) %></td>
         <td><%= task.memo %></td>
         <td>
         <%= link_to "確認", task %>
         </td>
         <td>
           <%= link_to "編集", [:edit, task] %>
         </td>
         <td>
           <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>

 <p><%= link_to "タスク新規登録", :new_task %></p>

  <h3>現在のタスク数は<span style="color:red"><%= @tasks_count %></span>個です。</h3>
